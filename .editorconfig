# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{py,rst,ini}]
indent_size = 4
max_line_length = 110

[*.{html,css,scss,json,xml}]
indent_size = 4


[*.{yml,yaml}]
indent_size = 2
max_line_length = 110

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

